@{
    ViewBag.Title = "Upload an Image";
}

<h2>@ViewBag.Title</h2>

@model ImageSharingWithUpload.Models.Image

<!-- TODO complete the form element with tag helpers -->
<form method="post" enctype="multipart/form-data">

<fieldset>
    <legend>Enter Image Information</legend>
    <p>
        Image id: <!-- TODO -->
        <input asp-for="Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </p>
    <p>
        Caption: <!-- TODO -->
        <input asp-for="Caption"/>
        <span asp-validation-for="Caption" class="text-danger"></span>
    </p>
    <p>
        Description:<br />
        <!-- TODO  text area -->
        <textarea asp-for="Description" cols="60" rows="5"></textarea>
    </p>
    <p>
        Date taken: <!-- TODO -->
        <input asp-for="DateTaken" />
        <span asp-validation-for="DateTaken" class="text-danger"></span>
    </p>
    <p>
        <input type="file" name="ImageFile" />
    </p>
    <p>
        <input type="submit" value="Upload" />
    </p>
</fieldset>

<p>@ViewBag.Message</p>
<p><div class="text-danger" asp-validation-summary="ModelOnly"></div></p>

</form>